@model Learn.Models.ViewModels.LessonViewModels

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Lesson</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lesson.Id" />
            <input type="hidden" asp-for="Lesson.StatusId" />
            <input type="hidden" asp-for="Lesson.CreationDateTime" />
            <div class="form-group">
                <label asp-for="Lesson.LevelId" class="control-label"></label>
                <select asp-for="Lesson.LevelId" class="form-control" asp-items="Model.Levels"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Title" class="control-label"></label>
                <input asp-for="Lesson.Title" class="form-control" />
                <span asp-validation-for="Lesson.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Order" class="control-label"></label>
                <input asp-for="Lesson.Order" class="form-control" />
                <span asp-validation-for="Lesson.Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Description" class="control-label"></label>
                <input asp-for="Lesson.Description" class="form-control" />
                <span asp-validation-for="Lesson.Description" class="text-danger"></span>
            </div>
            @if (Model.UserRole.ToString() == "Admin")
            {
                <div class="form-group">
                    <label asp-for="Icon" class="control-label"></label>
                    <input asp-for="Icon" type="file" class="form-control" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Picture" class="control-label"></label>
                    <input asp-for="Picture" type="file" class="form-control" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


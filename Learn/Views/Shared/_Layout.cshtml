<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="assets/images/favicon.png">
    <title>LingoMax</title>
    <!-- Bootstrap Core CSS -->
    <link href="https://panel.lingomars.ir/assets/node_modules/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://panel.lingomars.ir/assets/node_modules/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link href="https://panel.lingomars.ir/css/style.css" rel="stylesheet">
    <link href="https://panel.lingomars.ir/css/colors/default.css" id="theme" rel="stylesheet">
    <link href="/assets/CKEditor/ckeditor5.css" rel="stylesheet" />
    <a href="/assets/CKEditor/ckeditor5.css.map">/assets/ckeditor/ckeditor5.css.map</a>
    <style>
        .ck-editor__editable_inline {
            min-height: 400px;
            background-color: white;
            border: solid 1px black !important;
        }
    </style>
</head>

<body class="fix-header fix-sidebar card-no-border">
    <div id="main-wrapper">
        <header class="topbar">
            <nav class="navbar top-navbar navbar-expand-md navbar-light">
                <div class="navbar-header">
                    <a class="navbar-brand" href="index.html">
                        <img src="/assets/images/logo-icon.png" alt="homepage" class="dark-logo" />
                        <img src="/assets/images/logo-light-icon.png" alt="homepage" class="light-logo" />
                        <img src="/assets/images/logo-text.png" alt="homepage" class="dark-logo" />
                        <img src="/assets/images/logo-light-text.png" class="light-logo" alt="homepage" />
                    </a>
                </div>
                <div class="navbar-collapse">
                    <ul class="navbar-nav my-lg-0">
                        <li class="nav-item dropdown u-pro">
                            <a class="nav-link dropdown-toggle waves-effect waves-dark profile-pic" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="/assets/images/users/images.jpg" alt="user" class="" /> <span class="hidden-md-down" id="usernameAll"></span> </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="left-sidebar">
            <div class="scroll-sidebar">
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        <li>
                            <a class="waves-effect waves-dark" href="@Url.Action("Index","Levels")" aria-expanded="false"><i class="fa fa-tachometer"></i><span class="hide-menu">Levels</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark" href="@Url.Action("Index","Lessons")" aria-expanded="false"><i class="fa fa-user-circle-o"></i><span class="hide-menu">Lessons</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark" href="@Url.Action("IndexVocab","GeneralContents")" aria-expanded="false"><i class="fa fa-table"></i><span class="hide-menu">Vocabularies</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark" href="@Url.Action("IndexSpeak","GeneralContents")" aria-expanded="false"><i class="fa fa-globe"></i><span class="hide-menu">Speaking</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark" href="@Url.Action("IndexGrammer","GeneralContents")" aria-expanded="false"><i class="fa fa-smile-o"></i><span class="hide-menu">Grammer</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark" href="@Url.Action("Index","Exercises")" aria-expanded="false"><i class="fa fa-globe"></i><span class="hide-menu">Exercises</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark" href="@Url.Action("Index","Users")" aria-expanded="false"><i class="fa fa-globe"></i><span class="hide-menu">Users</span></a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark" href="@Url.Action("Index","Users")" aria-expanded="false"><i class="fa fa-globe"></i><span class="hide-menu">Financial</span></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
            <footer class="footer"> © LingoMax </footer>
        </div>
    </div>
    <script src="https://panel.lingomars.ir/assets/node_modules/jquery/jquery.min.js"></script>
    <script src="https://panel.lingomars.ir/assets/node_modules/bootstrap/js/popper.min.js"></script>
    <script src="https://panel.lingomars.ir/assets/node_modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://panel.lingomars.ir/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="https://panel.lingomars.ir/js/waves.js"></script>
    <script src="https://panel.lingomars.ir/js/sidebarmenu.js"></script>
    <script src="https://panel.lingomars.ir/js/custom.min.js"></script>

    <script type="importmap">
        {
            "imports": {
                "ckeditor5": "../../assets/CKEditor/ckeditor5.js",
                "ckeditor5/": "../../assets/CKEditor/"
            }
        }
    </script>
    <script type="module">
        import {
            ClassicEditor,
            Essentials,
            Paragraph,
            Bold,
            Italic,
            Font
        } from 'ckeditor5';

        ClassicEditor
            .create(document.querySelector('#editor'), {
                plugins: [Essentials, Paragraph, Bold, Italic, Font],
                toolbar: [
                    'undo', 'redo', '|', 'heading', '|', 'bold', 'italic', '|',
                    'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor'
                ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(error => {
                console.error(error);
            });
    </script>

</body>

</html>
